<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.dao.VideoDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.entity.VideoEntity" id="videoMap">
        <result property="name" column="name"/>
        <result property="cover" column="cover"/>
        <result property="url" column="url"/>
        <result property="introduction" column="introduction"/>
        <result property="releaseDate" column="releaseDate"/>
        <result property="clickTime" column="clickTime"/>
    </resultMap>

	<select id="selectListVO"
		resultType="com.entity.vo.VideoVO" >
		SELECT
		v.*,
		u.name AS artistName
		FROM
		videos v
		LEFT JOIN
		users u
		ON
		v.artist_id = u.id
		<where>
			1=1
			${ew.sqlSegment}
		</where>
	</select>
	
	<select id="selectVO"
		resultType="com.entity.vo.VideoVO" >
		SELECT  video.* FROM video  video 	
 		<where> 1=1 ${ew.sqlSegment}</where>
	</select>

    <select id="selectListView"
		resultType="com.entity.view.VideoView" >

		SELECT  video.* FROM video  video 	        
        <where> 1=1 ${ew.sqlSegment}</where>
	</select>
	
	<select id="selectView"
		resultType="com.entity.view.VideoView" >
		SELECT * FROM video  video <where> 1=1 ${ew.sqlSegment}</where>
	</select>
	

</mapper>
